import java.lang.Boolean;

CREATE TABLE property(
    id TEXT PRIMARY KEY,
    name TEXT NOT NULL,
    position INTEGER UNIQUE NOT NULL,
    isArchived INTEGER as Boolean DEFAULT 0
);

clear:
DELETE FROM property;

insert:
INSERT INTO property(id, name, position, isArchived)
VALUES ?;

findById:
SELECT *
FROM property
WHERE id = :id;

size:
SELECT count()
FROM property
WHERE isArchived != 1;

selectAll:
SELECT *
FROM property
ORDER BY position;
